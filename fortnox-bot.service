[Unit]
Description=Fortnox Slack Bot
After=network.target

[Service]
Type=simple
User=frke
WorkingDirectory=/home/frke/git/fortnox_slack_bot
Environment="PATH=/home/frke/git/fortnox_slack_bot/venv/bin"
ExecStart=/home/frke/git/fortnox_slack_bot/venv/bin/python /home/frke/git/fortnox_slack_bot/app.py
Restart=always
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=fortnox-bot

[Install]
WantedBy=multi-user.target
